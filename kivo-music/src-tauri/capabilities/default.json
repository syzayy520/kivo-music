{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for main window",
  "windows": [
    "main"
  ],
  "remote": {
    "urls": [
      "http://localhost:*/*",
      "http://127.0.0.1:*/*"
    ]
  },
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",

    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-size",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "**" }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "**" }
      ]
    }
  ]
}
